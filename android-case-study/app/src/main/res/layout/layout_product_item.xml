<?xml version="1.0" encoding="utf-8"?>
<com.target.dealbrowserpoc.dealbrowser.views.ProductItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/product"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_margin="@dimen/margin_10">


    <LinearLayout
        android:id="@+id/product_desc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/ship"
            tool:text="ship" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/or"
            android:textColor="@drawable/gray_color"
            tool:text="or" />

        <TextView
            android:id="@+id/product_aile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:background="@drawable/badge_background"
            android:textColor="@drawable/white_color"
            tool:text="s1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/margin_200"
        android:layout_height="@dimen/margin_200"
        android:layout_below="@id/product_desc_layout"
        android:layout_centerHorizontal="true"
        tool:background="@drawable/img_loading" />

    <TextView
        android:id="@+id/product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        android:gravity="center_horizontal"
        android:maxLines="2"
        tool:text="my product title" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_desc"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        tool:text="$23.00" />

</com.target.dealbrowserpoc.dealbrowser.views.ProductItemView>
